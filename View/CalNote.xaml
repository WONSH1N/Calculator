<Window x:Class="Calculator.View.CalNote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculation Note"
        Height="500" Width="320"
        Background="Black"
        Foreground="White"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <TextBlock Text="계산 노트"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"
                   />

        <!-- 계산 기록 리스트 -->
        <ListBox Grid.Row="1"
                 x:Name="NoteListBox"
                 ItemsSource="{Binding NoteHistory}"
                 Background="Black"
                 BorderThickness="0"
                 Foreground="White"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="White" BorderThickness="0,0,0,1" Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock Text="{Binding CalExp}" FontSize="14" Foreground="White" Width="150"/>
                                <TextBlock Text="{Binding Display}" FontSize="16" FontWeight="Bold" Foreground="White" Width="100" Margin="10,0,0,0"/>
                            </StackPanel>
                            <Button Content="삭제"
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    Foreground="White"
                                    Background="Transparent"
                                    BorderBrush="White"
                                    BorderThickness="1"
                                    Padding="5,2"
                                    Cursor="Hand"
                                    Click="DelNote_Click"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>

