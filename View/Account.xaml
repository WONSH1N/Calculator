<Window x:Class="Calculator.View.Account"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="계정 관리 노트"
        Height="500" Width="500"
        Background="Black"
        Foreground="White"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 버튼 영역 -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button Content="조회" Click="QueryButton_Click"
                    Margin="5,0" Padding="10,5"
                    Background="Transparent" BorderBrush="White" BorderThickness="1" Foreground="White"/>
            <Button Content="삭제" Click="DeleteButton_Click"
                    Margin="5,0" Padding="10,5"
                    Background="Transparent" BorderBrush="White" BorderThickness="1" Foreground="White"/>
        </StackPanel>

        <!-- 계정 목록 테이블 -->
        <DataGrid x:Name="AccountDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  Background="Black"
                  Foreground="Black"
                  BorderBrush="Gray"
                  GridLinesVisibility="Horizontal"
                  RowHeaderWidth="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="*"/>
                <DataGridTextColumn Header="Password" Binding="{Binding Password}" Width="2*"/>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="2*"/>
                <DataGridTextColumn Header="Authority" Binding="{Binding Authority}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
