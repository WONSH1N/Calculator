<Window
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" d:DataContext="{d:DesignInstance Type=local:Cal_ViewModel}" x:Class="Calculator.MainWindow"
        mc:Ignorable="d"
        Title="Calculator" Height="580" Width="400">
    <Grid Margin="2,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="story" Text ="{Binding CalcExp}" HorizontalAlignment="Center" HorizontalContentAlignment="Right" FontSize ="36" Background="WhiteSmoke" Margin="0,2,0,2" Width="390" />
        <TextBox Text="{Binding Display}" HorizontalAlignment="Center" HorizontalContentAlignment="Right" FontSize ="36" FontWeight="Bold" Background="WhiteSmoke" Margin="0,50,0,2" Width="390" Grid.RowSpan="2"/>

        <UniformGrid Rows="6" Columns="4" Grid.Row="3" Margin="0,19,0,0">
            <Button Name="btnPercent" Content="%" Command="{Binding EnterNumberCommand}" CommandParameter="%" Margin="2,1,1,1" FontSize="18" BorderThickness="0"></Button>
            <Button Name="btnCE" Content="CE" Command="{Binding ClearCommand}" CommandParameter="CE" Margin="2,1,1,1" FontSize="18" BorderThickness="0"></Button>
            <Button Name="btnClear" Content="C" Command="{Binding ClearCommand}" CommandParameter="CA" Margin="2,1,1,1" FontSize="18" BorderThickness="0"></Button>
            <Button Name="btnDel" Content="&lt;&lt;" Command="{Binding BackCommand}" CommandParameter="DL" Margin="2,1,1,1" FontSize="18" BorderThickness="0"></Button>
            <Button Name="btn7" Content="7" Command="{Binding EnterNumberCommand}" CommandParameter="7" Margin="2,1,1,1" FontSize="22" BorderThickness="0"></Button>
            <Button Name="btn8" Content="8" Command="{Binding EnterNumberCommand}" CommandParameter="8" Margin="2,1,1,1" FontSize="22" BorderThickness="0"></Button>
            <Button Name="btn9" Content="9" Command="{Binding EnterNumberCommand}" CommandParameter="9" Margin="2,1,1,1" FontSize="22" BorderThickness="0"></Button>
            <Button Name="btnDiv" Content="÷" Command="{Binding SetOperationCommand}" CommandParameter="/" Margin="2,1,1,1" FontSize="22" BorderThickness="0"></Button>
            <Button Name="btn4" Content="4" Command="{Binding EnterNumberCommand}" CommandParameter="4" Margin="2,1,1,1" FontSize="22" BorderThickness="0"></Button>
            <Button Name="btn5" Content="5" Command="{Binding EnterNumberCommand}" CommandParameter="5" Margin="2,1,1,1" FontSize="22" BorderThickness="0"></Button>
            <Button Name="btn6" Content="6" Command="{Binding EnterNumberCommand}" CommandParameter="6" Margin="2,1,1,1" FontSize="22" BorderThickness="0"></Button>
            <Button Name="btnMul" Content="*" Command="{Binding SetOperationCommand}" CommandParameter="*" Margin="2,1,1,1" FontSize="22" BorderThickness="0"></Button>
            <Button Name="btn1" Content="1" Command="{Binding EnterNumberCommand}" CommandParameter="1" Margin="2,1,1,1" FontSize="22" BorderThickness="0"></Button>
            <Button Name="btn2" Content="2" Command="{Binding EnterNumberCommand}" CommandParameter="2" Margin="2,1,1,1" FontSize="22" BorderThickness="0"></Button>
            <Button Name="btn3" Content="3" Command="{Binding EnterNumberCommand}" CommandParameter="3" Margin="2,1,1,1" FontSize="22" BorderThickness="0"></Button>
            <Button Name="btnSub" Content="-" Command="{Binding SetOperationCommand}" CommandParameter="-" Margin="2,1,1,1" FontSize="22" BorderThickness="0"></Button>
            <Button Name="btnSign" Content="±" Command="{Binding EnterNumberCommand}" CommandParameter="±" Margin="2,1,1,1" FontSize="22" BorderThickness="0"></Button>
            <Button Name="btn0" Content="0" Command="{Binding EnterNumberCommand}" CommandParameter="0" Margin="2,1,1,1" FontSize="22" BorderThickness="0"></Button>
            <Button Name="btnDot" Content="." Command="{Binding NewDot}" CommandParameter="." Margin="2,1,1,1" FontSize="22" BorderThickness="0"></Button>
            <Button Name="btnAdd" Content="+" Command="{Binding SetOperationCommand}" CommandParameter="+" Margin="2,1,1,1" FontSize="22" BorderThickness="0"></Button>
            <Button Name="btnEqual" Content="=" Command="{Binding CalculateCommand}" Margin="0,0,-296,20" FontSize="25" BorderThickness="0"></Button>
        </UniformGrid>
    </Grid>
</Window>
