<dx:ThemedWindow
        Background="Black"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        x:Class="Calculator.MainWindow"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:Cal_ViewModel}"
        xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"     
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        Title="Calculator" Height="500" Width="320">
    <dx:ThemedWindow.Resources>
        <!-- 상단 버튼 스타일 -->
        <Style x:Key="UpperButtonStyle" TargetType="dx:SimpleButton">
            <Setter Property="Width" Value="55"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="#666666"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="40"/>
        </Style>

        <!-- 숫자 버튼 스타일 -->
        <Style x:Key="NumberButtonStyle" TargetType="dx:SimpleButton">
            <Setter Property="Width" Value="55"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Background" Value="#444444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="30"/>
        </Style>

        <!-- 연산자 버튼 스타일 -->
        <Style x:Key="OperatorButtonStyle" TargetType="dx:SimpleButton">
            <Setter Property="Width" Value="55"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Background" Value="#FF9500"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="30"/>
        </Style>

        <!-- 하단 버튼 스타일 -->
        <Style x:Key="LowerButtonStyle" TargetType="dx:SimpleButton">
            <Setter Property="Width" Value="55"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Background" Value="#666666"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="30"/>
        </Style>
    </dx:ThemedWindow.Resources>

    <Grid Margin="2,0,2,2" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 메뉴 버튼 -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="5,0,0,0" VerticalAlignment="Center">
                <Button Name="MenuButton" Content="☰" Width="40" Height="40" 
                         Click="MenuButton_Click"
                                 Background="Black"
                                 Foreground="Orange"
                                 BorderBrush="Transparent"/>
            </StackPanel>

            <TextBox Name="calDisplay" Text ="{Binding CalcExp}"  HorizontalContentAlignment="Right" FontSize ="30" Background="Black" Foreground="WhiteSmoke" Margin="3,2,7,4" BorderBrush="Black" BorderThickness="1" TextChanged="calDisplay_TextChanged" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>

        </Grid>

        <!-- 팝업 메뉴 -->
        <Popup Name="MenuPopup" PlacementTarget="{Binding ElementName=MenuButton}" 
           Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
            <Border Background="#333" CornerRadius="5" Padding="5" Margin="0,5,0,0">
                <ListBox SelectionChanged="MenuListBox_SelectionChanged"
                     Background="Transparent" Foreground="White" BorderThickness="0">
                    <ListBoxItem x:Name="LoginCheck" Content="로그인" Padding="10"/>
                    <ListBoxItem Content="계정관리" Padding="10"/>
                    <ListBoxItem Content="메모지" Padding="10"/>
                </ListBox>
            </Border>
        </Popup>

        <TextBox Name="display" Text="{Binding Display}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Right" FontSize ="36" FontWeight="Bold" Background="Black" Foreground="WhiteSmoke" Margin="10,50,10,2" Grid.RowSpan="2" BorderBrush="Black" BorderThickness="1"/>
        <!--입력 버튼-->
        <UniformGrid Rows="6" Columns="4" Grid.Row="3" Margin="3,10,3,10">
            <dx:SimpleButton Name="btnPercent" Content="%" Command="{Binding EnterNumberCommand}" CommandParameter="%" Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource UpperButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btnCE" Content="CE" Command="{Binding ClearCommand}" CommandParameter="CE" Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource UpperButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btnClear" Content="C" Command="{Binding ClearCommand}" CommandParameter="CA" Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource UpperButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btnDel" Content="&lt;&lt;" Command="{Binding BackCommand}" CommandParameter="DL" Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource UpperButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btn7" Content="7" Command="{Binding EnterNumberCommand}" CommandParameter="7" Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource NumberButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btn8" Content="8" Command="{Binding EnterNumberCommand}" CommandParameter="8" Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource NumberButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btn9" Content="9" Command="{Binding EnterNumberCommand}" CommandParameter="9" Margin="2,1,1,1"  BorderThickness="0" Focusable="False" Style="{StaticResource NumberButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btnDiv" Content="÷" Command="{Binding SetOperationCommand}" CommandParameter="÷" Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource OperatorButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btn4" Content="4" Command="{Binding EnterNumberCommand}" CommandParameter="4" Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource NumberButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btn5" Content="5" Command="{Binding EnterNumberCommand}" CommandParameter="5" Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource NumberButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btn6" Content="6" Command="{Binding EnterNumberCommand}" CommandParameter="6" Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource NumberButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btnMul" Content="×" Command="{Binding SetOperationCommand}" CommandParameter="×" Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource OperatorButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btn1" Content="1" Command="{Binding EnterNumberCommand}" CommandParameter="1" Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource NumberButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btn2" Content="2" Command="{Binding EnterNumberCommand}" CommandParameter="2" Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource NumberButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btn3" Content="3" Command="{Binding EnterNumberCommand}" CommandParameter="3" Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource NumberButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btnSub" Content="-" Command="{Binding SetOperationCommand}" CommandParameter="-" Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource OperatorButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btnSign" Content="±" Command="{Binding EnterNumberCommand}" CommandParameter="±" Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource NumberButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btn0" Content="0" Command="{Binding EnterNumberCommand}" CommandParameter="0" Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource NumberButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btnDot" Content="." Command="{Binding NewDot}" CommandParameter="." Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource NumberButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btnAdd" Content="+" Command="{Binding SetOperationCommand}" CommandParameter="+" Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource OperatorButtonStyle}"></dx:SimpleButton>

            <dx:SimpleButton Name="btnMA" Content="M+" Command="{Binding MemoryAddCommand}" Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource LowerButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btnMR" Content="MR" Command="{Binding MemoryReadCommand}" Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource LowerButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btnMC" Content="MC" Command="{Binding MemoryClearCommand}" Margin="2,1,1,1" BorderThickness="0" Focusable="False" Style="{StaticResource LowerButtonStyle}"></dx:SimpleButton>
            <dx:SimpleButton Name="btnEqual" Content="=" Command="{Binding CalculateCommand}" CommandParameter="=" FontSize="25" BorderThickness="0" Focusable="False" Style="{StaticResource OperatorButtonStyle}"></dx:SimpleButton>
        </UniformGrid>


    </Grid>
    <!--키 버튼-->
    <dx:ThemedWindow.InputBindings>
        <KeyBinding Key ="Backspace" Command="{Binding BackCommand}" CommandParameter="DL"/>
        <KeyBinding Key ="C" Command="{Binding ClearCommand}" CommandParameter="CA"/>
        <KeyBinding Key ="D1" Command="{Binding EnterNumberCommand}" CommandParameter="1"/>
        <KeyBinding Key ="D2" Command="{Binding EnterNumberCommand}" CommandParameter="2"/>
        <KeyBinding Key ="D3" Command="{Binding EnterNumberCommand}" CommandParameter="3"/>
        <KeyBinding Key ="D4" Command="{Binding EnterNumberCommand}" CommandParameter="4"/>
        <KeyBinding Key ="D5" Command="{Binding EnterNumberCommand}" CommandParameter="5"/>
        <KeyBinding Key ="D6" Command="{Binding EnterNumberCommand}" CommandParameter="6"/>
        <KeyBinding Key ="D7" Command="{Binding EnterNumberCommand}" CommandParameter="7"/>
        <KeyBinding Key ="D8" Command="{Binding EnterNumberCommand}" CommandParameter="8"/>
        <KeyBinding Key ="D9" Command="{Binding EnterNumberCommand}" CommandParameter="9"/>
        <KeyBinding Key ="D0" Command="{Binding EnterNumberCommand}" CommandParameter="0"/>
        <KeyBinding Key ="F9" Command="{Binding EnterNumberCommand}" CommandParameter="±"/>
        <KeyBinding Key ="D5" Modifiers="Shift" Command="{Binding EnterNumberCommand}" CommandParameter="%"/>
        <KeyBinding Key ="OemPeriod" Command="{Binding NewDot}" CommandParameter="."/>
        <KeyBinding Key="D8" Modifiers="Shift" Command="{Binding SetOperationCommand}" CommandParameter="×"/>
        <KeyBinding Key="OemQuestion" Command="{Binding SetOperationCommand}" CommandParameter="÷"/>
        <KeyBinding Key="OemMinus" Command="{Binding SetOperationCommand}" CommandParameter="-"/>
        <KeyBinding Key="OemPlus" Modifiers="Shift" Command="{Binding SetOperationCommand}" CommandParameter="+"/>
        <KeyBinding Key ="Enter" Command="{Binding CalculateCommand}" CommandParameter="="/>
    </dx:ThemedWindow.InputBindings>
</dx:ThemedWindow>
